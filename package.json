{
  "name": "n8n-nodes-pgvector-advanced",
  "version": "1.6.0",
  "description": "Advanced PGVector + Postgres nodes for n8n with full CRUD control",
  "license": "MIT",
  "homepage": "https://aaron777collins.github.io/BetterPGVectorN8N/",
  "author": {
    "name": "Aaron Collins",
    "email": "aaron777collins@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aaron777collins/BetterPGVectorN8N.git"
  },
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --selectProjects=integration",
    "test:unit": "jest --selectProjects=unit",
    "test:e2e": "jest --selectProjects=e2e",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v",
    "pretest:integration": "npm run docker:up && sleep 5",
    "posttest:integration": "npm run docker:down"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/Postgres.credentials.js"
    ],
    "nodes": [
      "dist/nodes/PgvectorVectorStore.node.js",
      "dist/nodes/PgVectorStoreTool.node.js"
    ]
  },
  "bin": {
    "pgvector-mcp": "./dist/mcp/cli.js"
  },
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "pgvector",
    "postgres",
    "vector",
    "embeddings",
    "semantic-search",
    "mcp",
    "model-context-protocol",
    "ai-agents"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.1",
    "n8n-core": "^2.1.1",
    "n8n-workflow": "^1.120.1",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@langchain/core": "^0.3.0",
    "pg": "^8.11.3",
    "pgvector": "^0.1.8",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
